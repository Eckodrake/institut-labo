{% extends 'base.html.twig' %}

{% block title 'Administration - Catégories' %}

{% block body %}
    <table>
        <thead>
            <tr>
                <th>Image</th>
                <th>Nom</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td><img src="{{ asset('/img/categories/' ~ category.image) }}" alt="{{ category.image }}"></td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('admin.category.edit', {slug: category.slug, id: category.id}) }}">Éditer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
