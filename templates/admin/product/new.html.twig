{% extends 'base.html.twig' %}

{% block title 'Nouveau produit' %}

{% block body %}
    <main role="main" class="main">
        <section class="container">
            <div class="row"><h1>Nouveau produit</h1></div>

            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">{{ form_row(form.name) }}</div>
                <div class="col-md-6">{{ form_row(form.imageFile) }}</div>
            </div>
            <div class="row">
                <div class="col-md-2">{{ form_row(form.price) }}</div>
                <div class="col-md-10">{{ form_row(form.description) }}</div>
            </div>
            <button class="btn btn-secondary" type="submit">Cr√©er produit</button>
            {{ form_end(form) }}
        </section>
    </main>
{% endblock %}

