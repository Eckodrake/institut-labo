{% extends 'base.html.twig' %}

{% block title 'Tous les produits' %}

{% block body %}
    <main role="main" class="main">
        <header class="container-fluid prestation-title">
            <div class="container">
                <div class="row align-items-center">
                    <h1>Germaine de Capuccini</h1>
                </div>
            </div>
        </header>

        <section class="container my-5">
            <div class="row justify-content-around">
                {% for product in products %}
                    <div class="card-deck my-3">
                        <div class="card">
                            <img class="card-img-top" src="{{ asset('img/products/' ~ product.img) }}"
                                 alt="{{ product.img }}" style="max-width: 15vw;">
                            <div class="card-body">
                                <h5 class="card-title">{{ product.name }}</h5>
                                <small class="text-muted">{{ product.price ~ 'â‚¬' }}</small>
                                <p class="card-text">{{ product.description | nl2br }}</p>
                            </div>
                            <div class="card-footer">
                                <a href="{{ path('product.show', {id: product.id, slug: product.slug}) }}" class="card-link text-success">
                                    Voir le produit
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>

            <div class="row justify-content-center my-5">
                <div class="pagination">
                    {{ knp_pagination_render(products) }}
                </div>
            </div>
        </section>
    </main>
{% endblock %}
